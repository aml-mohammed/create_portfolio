@model IEnumerable<Core.Entites.PortfolioItem>

@{
    ViewData["Title"] = "Index";
}
<div style="margin:160px 150px;">

    <h1>Index</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProjectName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImageUrl)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProjectName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.ImageUrl)
                </td>*@

                <td>
                    <img src="~/images/portfolio/@item.ImageUrl" class="img-thumbnail" style="width:64px; height:64px;" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td style="background-color:seagreen">
                    <a asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-edit">edit</i></a> |
                    <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye">details</i></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash">delete</i></a>
                </td>
            </tr>
            }
        </tbody>
    </table>
</div>
